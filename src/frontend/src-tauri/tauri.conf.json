{
  "productName": "Claudiminder",
  "version": "0.1.0",
  "identifier": "com.claudeminder.desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/claudeminder-sidecar"],
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libappindicator3-1"],
        "section": "utils",
        "priority": "optional"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "category": "Utility",
    "shortDescription": "Claude usage tracking & reminder tool",
    "longDescription": "Monitor Claude AI usage limits, get notifications before reset windows, and track usage history with system tray integration."
  },
  "app": {
    "windows": [
      {
        "title": "Claudiminder",
        "width": 400,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": true
      },
      {
        "label": "overlay",
        "title": "Usage Overlay",
        "url": "/overlay",
        "width": 180,
        "height": 80,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "x": 20,
        "y": 20
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.png",
      "tooltip": "Claudiminder"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
